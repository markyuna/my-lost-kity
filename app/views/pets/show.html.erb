<div class="container my-auto mt-5">
  <div class="col">
    <div class="row">
      <h1><%= @pet.name %></h1>
      <h3>Found <%= time_ago_in_words(@pet.found_on) %> ago</h3>
      <p>at <%= @pet.address %></p>
      <p>which is a <%= @pet.species %></p>
    </div>
    <div class="row">
      <%= link_to "Back to animals", pets_path %>
      <%= link_to "Edit", edit_pet_path(@pet) %>
      <%= link_to "Delete", pet_path(@pet), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'
      } %>

    </div>
  </div>
</div>
